# MySQL Configuration для сервера с 2GB RAM
# Оптимизировано для минимального потребления памяти

[mysqld]
# Основные настройки
max_connections = 50
thread_cache_size = 8
table_open_cache = 256
table_definition_cache = 256

# Оптимизация памяти
innodb_buffer_pool_size = 256M
innodb_log_file_size = 32M
innodb_log_buffer_size = 4M
innodb_flush_log_at_trx_commit = 2

# Временные таблицы
tmp_table_size = 16M
max_heap_table_size = 16M

# Буферы
sort_buffer_size = 1M
read_buffer_size = 1M
read_rnd_buffer_size = 1M
join_buffer_size = 1M

# Производительность
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_stats_on_metadata = 0

# Логирование (минимальное)
slow_query_log = 0
general_log = 0

# Безопасность
max_allowed_packet = 16M
